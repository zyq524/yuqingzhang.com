@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using Umbraco.Forms.Mvc
	
@if (Model.MacroParameters["FormGuid"] != null)
{
    var s = Model.MacroParameters["FormGuid"].ToString();
    var g = new Guid(s);

    string customFile = s + "/Form.cshtml";

    string view = (System.IO.File.Exists(Server.MapPath(Path.Combine(Config.ViewsPath, customFile)))) ? customFile : "";
    
	Html.RenderAction("Render", "UmbracoForms", new {formId = g, mode = "form", view = view});
}
