@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<!-- Start Home-header section -->
<section class="home-header border-bottom padding-block">
    <!-- start container -->
    <div class="container">
        <!-- start row -->
        <div class="row">
            <div class="col-xs-12 col-sm-5 col-lg-5 text-center border-right">
                <!-- Your foto -->
                <div class="foto">
                    <img src="@Umbraco.Media(CurrentPage.ProfilePhoto).Url" alt="Yuqing Zhang">
                </div>
                <!-- end your foto -->
            </div>
            <div class="col-xs-12 col-sm-7 col-lg-7 text-center">
                <!-- Your Name -->
                <h1 class="title">@Umbraco.Field("profileName")</h1>
                <!-- Your Profession -->
                <h3 class="sub-title">@Umbraco.Field("profileTitle")</h3>
                <!-- social icon -->
                <div class="social">
                    @Umbraco.RenderMacro("SocialProfiles")
                </div>
                <!-- end social icon -->
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</section>
<!-- End Home-header section -->
<!-- Start Menu section -->
<nav class="menu">
    <!-- start container -->
    <div class="container">
        <!-- start row -->
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12">
                <!-- start menu block (resume) -->
                <a href="resume" class="menu-li">
                    <!-- img menu block -->
                    <span class="foto">
                        <img src="@Url.Content("~/assets/img/menu/resume.png")" class="menu-img" data-img-name="resume" alt="resume">
                    </span>
                    <!-- name menu block -->
                    <span class="name">Resume</span>
                </a>
                <!-- end menu block (resume) -->
                <!-- start menu block (blog) -->
                <a href="blog" class="menu-li">
                    <!-- img menu block -->
                    <span class="foto">
                        <img src="@Url.Content("~/assets/img/menu/blog.png")" class="menu-img" data-img-name="blog" alt="blog">
                    </span>
                    <!-- name menu block -->
                    <span class="name">Blog</span>
                </a>
                <!-- end menu block (portfolio) -->
                <!-- start menu block (contact) -->
                <a href="contact" class="menu-li">
                    <!-- img menu block -->
                    <span class="foto">
                        <img src="@Url.Content("~/assets/img/menu/contact.png")" class="menu-img" data-img-name="contact" alt="contact">
                    </span>
                    <!-- name menu block -->
                    <span class="name">Contact</span>
                </a>
                <!-- end menu block (contact) -->
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</nav>
<!-- End Menu section -->
