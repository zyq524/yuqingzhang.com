@using Articulate
@model Articulate.Models.IMasterModel

<aside class="widget">
    <form method="get" action="@Url.ArticulateSearchUrl(Model)">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="term" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" style="line-height: 32px; margin-top: 0; right: 1px" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>

</aside>
